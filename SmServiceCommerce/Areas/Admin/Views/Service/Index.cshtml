@model IEnumerable<Service>
@{
    ViewData["Title"] = "Service Management";
}
<div class="container mt-5">
    <div class="row pb-3">
        <div class="col-6 ">
            <h2>Service List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Service" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped table-hover" id="tblData">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Service Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts{
    <script src="~/js/service.js"></script>
}

