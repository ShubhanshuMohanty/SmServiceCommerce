@model ServiceProviderInfo 

<div class="container py-5">
    <!-- Service Info + Booking Form -->
    <div class="row mb-5 g-4">
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="neu-card p-4 text-center h-100">
                <!-- Profile Circle -->
                <div class="profile-circle-detail">@Model.User?.Name?[0].ToString().ToUpper()</div>

                <!-- Name & Profession -->
                <h3 class="mb-2 fw-bold text-primary">@Model?.User?.Name</h3>
                <p class="text-muted fs-5 mb-3">@Model?.User?.Service?.ServiceName</p>

                <!-- Experience Badge -->
                <span class="badge-neu d-inline-block mb-3">@Model?.Experience + Years Experience</span>

                <!-- Rating -->
                <div class="rating-container">
                    <div class="d-flex justify-content-center align-items-center gap-2 mb-2">
                        <span class="star-rating">
                            <i class="fas fa-star"></i> 4.5
                        </span>
                        <small class="text-muted">(135 reviews)</small>
                    </div>
                </div>

                <!-- Service Info -->
                <div class="info-item d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">
                        <i class="fas fa-rupee-sign me-2 text-success"></i>Service Fee:
                    </span>
                    <span class="text-success fw-bold fs-5">₹@Model?.ServiceFee</span>
                </div>

                <div class="info-item d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">
                        <i class="fas fa-phone me-2 text-primary"></i>Phone:
                    </span>
                    <span class="text-muted">+91 @Model?.User?.PhoneNumber</span>
                </div>

                <!-- Description -->
                <div class="mt-4 p-3 neu-card-inset">
                    <p class="text-muted mb-0 lh-lg">
                        @Model?.Description 
                    </p>
                </div>
            </div>
        </div>

        <!-- Booking Form -->
        <div class="col-lg-8">
            <div class="neu-card p-4 h-100">
                <h4 class="section-title">
                    <i class="fas fa-calendar-check me-2 text-primary"></i>Book This Service
                </h4>
                <form asp-controller="Service" asp-action="BookService" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold mb-3">Select Date</label>
                            <input type="date" class="form-control neu-input" name="BookingDate">
                        </div>
                        <input type="hidden" name="ServiceProviderId" value="@Model?.User?.Id" />
                        <div class="col-md-6">
                            <label class="form-label fw-semibold mb-3">Select Time</label>
                            <input type="time" class="form-control neu-input" name="BookingTime">
                        </div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label fw-semibold mb-3">Additional Notes</label>
                        <textarea class="form-control neu-input" name="Notes" rows="4" placeholder="Please describe your plumbing issue or specific requirements..."></textarea>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn neu-btn btn-lg w-100 py-3">
                            <i class="fas fa-calendar-check me-2"></i>Confirm Booking - ₹@Model?.ServiceFee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Customer Reviews -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="neu-card p-4">
                <h4 class="section-title">
                    <i class="fas fa-star me-2 text-warning"></i>Customer Reviews
                </h4>

                <div class="row g-4">
                    <!-- Review 1 -->
                    <div class="col-md-6">
                        <div class="review-card">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="fw-bold mb-1">Rahul Sharma</h6>
                                    <small class="text-muted">July 10, 2025</small>
                                </div>
                                <div class="star-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                            <p class="mb-0 text-muted">Great service! Very professional and punctual. Fixed my kitchen sink perfectly.</p>
                        </div>
                    </div>

                    <!-- Review 2 -->
                    <div class="col-md-6">
                        <div class="review-card">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="fw-bold mb-1">Priya Verma</h6>
                                    <small class="text-muted">June 28, 2025</small>
                                </div>
                                <div class="star-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                            <p class="mb-0 text-muted">Nice behavior and quick service. Will definitely book again for future needs!</p>
                        </div>
                    </div>
                </div>

                <!-- Add New Review -->
                <div class="mt-5">
                    <div class="neu-card-inset p-4">
                        <h5 class="section-title">
                            <i class="fas fa-pen me-2 text-primary"></i>Leave a Review
                        </h5>
                        <form>
                            <div class="mb-4">
                                <label class="form-label fw-semibold mb-3">Your Rating</label>
                                <div class="star-rating fs-4" style="cursor: pointer;">
                                    <i class="far fa-star me-1" data-rating="1"></i>
                                    <i class="far fa-star me-1" data-rating="2"></i>
                                    <i class="far fa-star me-1" data-rating="3"></i>
                                    <i class="far fa-star me-1" data-rating="4"></i>
                                    <i class="far fa-star me-1" data-rating="5"></i>
                                </div>
                            </div>
                            <div class="mb-4">
                                <textarea class="form-control neu-input" rows="4" placeholder="Share your experience with this service..."></textarea>
                            </div>
                            <button type="submit" class="btn neu-btn px-4 py-2">
                                <i class="fas fa-paper-plane me-2"></i>Submit Review
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





