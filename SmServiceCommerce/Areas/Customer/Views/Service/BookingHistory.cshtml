@model List<Booking>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="history-header-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h2 class="mb-1"><i class="fas fa-history me-2"></i>Booking History</h2>
                        <p class="mb-0 opacity-75">Track all your service bookings</p>
                    </div>
                    <div class="text-end">
                        <div class="history-stats-number">12</div>
                        <small>Total Bookings</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-success">8</div>
                <div class="text-muted">Completed</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-warning">2</div>
                <div class="text-muted">Pending</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-primary">1</div>
                <div class="text-muted">Confirmed</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-danger">1</div>
                <div class="text-muted">Cancelled</div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <input type="text" class="form-control history-search-box" placeholder="Search by service provider or service type...">
        </div>
        <div class="col-md-6 mb-3">
            <div class="d-flex gap-2 flex-wrap">
                <button class="history-filter-btn">All</button>
                <button class="history-filter-btn">Completed</button>
                <button class="history-filter-btn">Pending</button>
                <button class="history-filter-btn">Confirmed</button>
                <button class="history-filter-btn">Cancelled</button>
            </div>
        </div>
    </div>

    <!-- Booking Cards -->
    <div class="row">
        <!-- Repeat this block for each booking -->
        @foreach(var data in Model)
        {
            <div class="col-md-6 col-xl-4 mb-4">
                <div class="history-neumorphic-card p-4 h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="history-service-icon history-neumorphic-inset me-3">
                            <i class="fas fa-broom"></i>
                        </div>
                        <span class="history-status-badge history-status-@data.Status.ToLower()">@data.Status</span>
                    </div>
                    <h5 class="mb-2 text-primary">@data?.ServiceProvider?.Service?.ServiceName</h5>
                    <p class="mb-2 text-secondary"><i class="fas fa-user me-1"></i>@data?.ServiceProvider?.Name</p>
                    <div class="row mb-3">
                        <div class="col-6">
                            <small class="text-muted">Date</small>
                            <div class="fw-semibold"><i class="fas fa-calendar me-1"></i>@data?.BookingDate</div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Time</small>
                            <div class="fw-semibold"><i class="fas fa-clock me-1"></i>@data?.BookingTime</div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="fw-bold text-success fs-5">₹1,500</div>
                        @* <button class="btn btn-sm history-filter-btn"><i class="fas fa-eye me-1"></i>View</button> *@
                    </div>
                </div>
            </div>
        }
        <!-- Add more cards below similarly... -->
    </div>
</div>
