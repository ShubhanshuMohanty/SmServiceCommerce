@model BookingHistoryVM
@{
    var status = Context.Request.Query["status"];
    string Completed = "";
    string Pending = "";
    string Confirmed = "";
    string Cancelled = "";
    var All = "";

    switch (status)
    {
        case "Completed":
            Completed = "history-active";
            break;
        case "Pending":
            Pending = "history-active";
            break;
        case "Confirmed":
            Confirmed = "history-active";
            break;
        case "Cancelled":
            Cancelled = "history-active";
            break;
        default:
            All = "history-active";
            break;
    }

}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="history-header-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h2 class="mb-1"><i class="fas fa-history me-2"></i>Booking History</h2>
                        <p class="mb-0 opacity-75">Track all your service bookings</p>
                    </div>
                    <div class="text-end">
                        <div class="history-stats-number">@Model.totalBookingNumber</div>
                        <small>Total Bookings</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-success">@Model.totalCompleteBookingNumber</div>
                <div class="text-muted">Completed</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-warning">@Model.totalPendingBookingNumber</div>
                <div class="text-muted">Pending</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-primary">@Model.totalConfirmBookingNumber</div>
                <div class="text-muted">Confirmed</div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="history-neumorphic-card history-stats-card">
                <div class="history-stats-number text-danger">@Model.totalCancelBookingNumber</div>
                <div class="text-muted">Cancelled</div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        @* <div class="col-md-6 mb-3"> *@
        @*     <input type="text" class="form-control history-search-box" placeholder="Search by service provider or service type..."> *@
        @* </div> *@
        <div class="col-md-6 mb-3">
            <div class="d-flex gap-2 flex-wrap">
                <button class="history-filter-btn @All">
                    <a asp-controller="Service" asp-action="BookingHistory" asp-route-status="All">
                        All
                    </a>
                </button>
                <button class="history-filter-btn @Completed">
                    <a asp-controller="Service" asp-action="BookingHistory" asp-route-status="Completed">
                        Completed
                    </a>
                </button>
                <button class="history-filter-btn @Pending">
                    <a asp-controller="Service" asp-action="BookingHistory" asp-route-status="Pending">
                        Pending
                    </a>
                </button>
                <button class="history-filter-btn @Confirmed">
                    <a asp-controller="Service" asp-action="BookingHistory" asp-route-status="Confirmed">
                        Confirmed
                    </a>
                </button>
                <button class="history-filter-btn @Cancelled">
                    <a asp-controller="Service" asp-action="BookingHistory" asp-route-status="Cancelled">
                        Cancelled
                    </a>
                </button>

            </div>
        </div>
    </div>

    <!-- Booking Cards -->
    <div class="row">
        <!-- Repeat this block for each booking -->
        @foreach(var data in Model.Items)
        {
            <div class="col-md-6 col-xl-4 mb-4">
                <div class="history-neumorphic-card p-4 h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="history-service-icon history-neumorphic-inset me-3">
                            <i class="fas fa-broom"></i>
                        </div>
                        <span class="history-status-badge history-status-@data.Booking?.Status.ToLower()">@data?.Booking?.Status</span>
                    </div>
                    <h5 class="mb-2 text-primary">@data?.Booking?.ServiceProvider?.Service?.ServiceName</h5>
                    <p class="mb-2 text-secondary"><i class="fas fa-user me-1"></i>@data?.Booking?.ServiceProvider?.Name</p>
                    <div class="row mb-3">
                        <div class="col-6">
                            <small class="text-muted">Date</small>
                            <div class="fw-semibold"><i class="fas fa-calendar me-1"></i>@data?.Booking?.BookingDate</div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Time</small>
                            <div class="fw-semibold"><i class="fas fa-clock me-1"></i>@data?.Booking?.BookingTime</div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="fw-bold text-success fs-5">₹@data?.serviceProviderInfo?.ServiceFee</div>
                        @if (data?.Booking?.Status != "Cancelled" && data?.Booking?.Status != "Completed")
                        {
                            <button class="btn btn-sm history-filter-btn" data-bs-toggle="modal" data-bs-target="#serviceModal-@data?.Booking?.Id"><i class="fas fa-eye me-1"></i>View</button>
                        }
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="serviceModal-@data?.Booking?.Id" tabindex="-1" aria-labelledby="serviceModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content bookingview-neumorphism-card">
                        <div class="modal-header border-0">
                            <h5 class="modal-title w-100 text-center" id="serviceModalLabel">Service Actions</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <button class="btn btn-danger bookingview-btn-action">
                                <a asp-controller="Service" asp-action="CancelService" asp-route-id="@data?.Booking?.Id">
                                    Cancel Service
                                </a>
                            </button>
                            @if (data?.Booking?.Status != "Pending")
                            {
                                <button class="btn btn-success bookingview-btn-action">
                                    <a asp-controller="Service" asp-action="CompleteService" asp-route-id="@data?.Booking?.Id">
                                        Mark as Complete
                                    </a>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Add more cards below similarly... -->
    </div>
</div>

